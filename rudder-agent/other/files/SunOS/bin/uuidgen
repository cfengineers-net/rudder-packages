use strict;

my $uuid = uuid();

print "$uuid\n";

sub uuid {
	my $uuid = "";

	for(my $n = 0; $n < 16; ++$n){
		#my $random = int(rand(2**32-1));
		my $random = int(rand(32768));
		my $b = $random % 255;

		if($n == 6){
			$uuid .= sprintf("4%x", $b % 15);
		}elsif($n == 8){
			my $c = "89ab";
			#$uuid .= substr($c, int(int(rand(2**32-1)) % length($c)), 1);
			$uuid .= substr($c, int(int(rand(32768)) % length($c)), 1);
			$uuid .= sprintf("%x", $b % 15);
		}else{
			$uuid .= sprintf("%02x", $b);
		}
		if($n =~ /^(3|5|7|9)$/){
			$uuid .= "-"; 
		}
	}
	return $uuid;
}
